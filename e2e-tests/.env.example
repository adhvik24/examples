# Base URLs for different example applications
BLOG_URL=http://localhost:3000
API_URL=http://localhost:3001
UPLOAD_URL=http://localhost:3002
CRON_URL=http://localhost:3003

# Test environment configuration
NODE_ENV=test
BASE_URL=http://localhost:3000

# CI/CD configuration
CI=false
PLAYWRIGHT_BROWSERS_PATH=./browsers

# Performance thresholds (milliseconds)
LCP_THRESHOLD=2500
FID_THRESHOLD=100
CLS_THRESHOLD=0.1

# Test execution options
PARALLEL_WORKERS=4
TEST_TIMEOUT=120000
EXPECT_TIMEOUT=15000

# Visual testing (if using Applitools or similar)
# APPLITOOLS_API_KEY=your_api_key_here

# Browser selection for tests
TEST_BROWSERS=chromium,firefox,webkit

# Debug options
PLAYWRIGHT_DEBUG=false
HEADED=false
SLOWMO=0

# Screenshot and video options
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Test data configuration
TEST_DATA_FILE=fixtures/test-data.json
MOCK_RESPONSES_FILE=fixtures/mock-responses.json